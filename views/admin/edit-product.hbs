<section class="container mt-5">
  <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
    <label for="">Name</label>
    <input value="{{product.Name}}" type="text" name="Name" class="form-control" placeholder="Name">

    <label for="">Category</label>
    <input value="{{product.Category}}" type="text" name="Category" class="form-control" placeholder="Category">

    <label for="">Price</label>
    <input value="{{product.Price}}" type="text" name="Price" class="form-control" placeholder="Price">

    <label for="">Description</label>
    <input value="{{product.Description}}" type="text" name="Description" class="form-control" placeholder="Description">

    <label for="">Image</label>
    <br>
    <img src="/images/{{product._id}}.jpg" style="width: 100px; height: auto;" id="imgView">
    <input onclick="viewImage(event)" type="file" name="Image" class="form-control" >

    <button type="submit" class="btn btn-success">Submit</button>
  </form>
</section>

<script>
function viewImage(event) {
  document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0]);
}
</script>
