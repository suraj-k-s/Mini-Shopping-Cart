
<section class="container mt-5">
  <div class="row">
    <a href="/admin/add-product"><button type="button" class="btn btn-success float-end">Add Product</button></a>
  </div>
  <table class="table mt-3" id="myTable">
    <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Title</th>
        <th scope="col">Category</th>
        <th scope="col">Description</th>
        <th scope="col">Image</th>
        <th scope="col">Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <td scope="row">{{this.date}}</td>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td> <img style="width: 50px; height: 50px;" src="/images/{{this._id}}.jpg" alt=""> </td>
          <td>
           <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
           <a href="/admin/delete-product{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure delete {{this.Name}}?')">Delete</a>
         </td>
        </tr>
      {{/each}}

    </tbody>
  </table>
</section>
<script type="text/javascript">
$(document).ready(function(){
       $('#myTable').DataTable();
   });
</script>
